<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="NavMine"
            id="com.navclus.ui.classview">
      </category>
      <view
            name="Class View"
            icon="icons/sample.gif"
            category="com.navclus.ui.classview"
            class="com.navclus.ui.classview.views.ClassView"
            id="com.navclus.ui.classview.views.ClassView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="com.navclus.userinterface.classview.views.ClassView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
